<?xml version="1.0" encoding="UTF-8"?>
<project name="TestJenkins" default="ci" basedir=".">
    <taskdef name="phpunitlaravel" classname="PHPUnitSimpleTask" />

    <target name="ci"
        description="Tâche principale d'intégration continue"
        depends="test"
    />

    <target name="test" description="Lance les tests PHPUnit">
    	<phpunitlaravel phpunit="${project.logdir}/${phpunit.config}" template="${project.basedir}/${phpunit.config}" phplist="${project.logdir}/${phplist.modelsoutfile}" junitlog="${project.logdir}/${phpunit.junitoutfile}" cloverlog="${project.logdir}/${phpunit.cloveroutfile}" htmllog="${project.logdir}/${phpunit.htmloutdir}" />
    </target>
</project>