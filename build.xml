<?xml version="1.0" encoding="UTF-8"?>
<project name="TestJenkins" default="ci" basedir=".">
    <property name="source" value="src" />

    <target name="ci"
        description="Tâche principale d'intégration continue"
        depends="test"
    />

    <target name="test" description="Lance les tests PHPUnit">
    	<property name="relative_path" value="./vendor/phpunit/phpunit/phpunit"/>
    	<resolvepath propertyName="absolute_path" file="${relative_path}"/>
		<exec command="php '${absolute_path}'" passthru="true" checkreturn="true" dir="." escape="true"/>
    </target>
</project>